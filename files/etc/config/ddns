config ddns 'global'
	option ddns_dateformat '%F %R'
	option ddns_loglines '250'

config service 'cloudflare_ipv4'
	option enabled '0'
	option service_name 'cloudflare.com-v4'
	option domain 'home.example.com'
	option lookup_host 'home.example.com'
	option username 'Bearer'
	option password 'REPLACE_WITH_CLOUDFLARE_API_TOKEN'
	option param_opt 'zone_id=REPLACE_WITH_ZONE_ID'
	option interface 'wan'
	option ip_source 'network'
	option ip_network 'wan'
	option use_https '1'
	option force_interval '72'
	option force_unit 'hours'

config service 'cloudflare_ipv6'
	option enabled '0'
	option service_name 'cloudflare.com-v6'
	option domain 'home.example.com'
	option lookup_host 'home.example.com'
	option username 'Bearer'
	option password 'REPLACE_WITH_CLOUDFLARE_API_TOKEN'
	option param_opt 'zone_id=REPLACE_WITH_ZONE_ID'
	option interface 'wan6'
	option ip_source 'network'
	option ip_network 'wan6'
	option use_https '1'
	option force_interval '72'
	option force_unit 'hours'
